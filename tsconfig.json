{
    "include": ["src"],
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "outDir": "./dist",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    }
}
